<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity"
            android:padding="@dimen/dim_app_space">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/view_til_rows"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dim_view_space_10dp"
                android:layout_marginRight="@dimen/dim_view_space_10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintEnd_toStartOf="@id/view_til_columns"
                app:layout_constraintRight_toLeftOf="@id/view_til_columns"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintTop_toTopOf="parent"
                app:hintAnimationEnabled="true"
                android:hint="@string/st_rows"
                app:hintEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/view_tiet_rows"
                    android:text="@string/st_rows"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/st_rows" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/view_til_columns"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_view_space_10dp"
                android:layout_marginLeft="@dimen/dim_view_space_10dp"
                android:layout_marginEnd="@dimen/dim_view_space_10dp"
                android:layout_marginRight="@dimen/dim_view_space_10dp"
                app:layout_constraintStart_toEndOf="@id/view_til_rows"
                app:layout_constraintLeft_toRightOf="@id/view_til_rows"
                app:layout_constraintEnd_toStartOf="@id/view_mbtn_apply"
                app:layout_constraintRight_toLeftOf="@id/view_mbtn_apply"
                app:layout_constraintTop_toTopOf="parent"
                app:hintAnimationEnabled="true"
                android:hint="@string/st_columns"
                app:hintEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/view_tiet_columns"
                    android:text="@string/st_columns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/st_columns" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/view_mbtn_apply"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/st_apply"
                app:layout_constraintTop_toTopOf="@id/view_til_rows"
                app:layout_constraintBottom_toBottomOf="@id/view_til_rows"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>